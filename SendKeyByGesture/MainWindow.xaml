<Window x:Class="SendKeyByGesture.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
		xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers"
		Title="MainWindow" Height="350" Width="525"
		Loaded="Window_Loaded" Closing="Window_Closing"
		x:Name="thisWindow">
	<Grid>
		<k:KinectSensorChooserUI x:Name="kinectSensorChooserUI" />
		<WpfViewers:KinectColorViewer KinectSensorManager="{Binding KinectSensorManager, ElementName=thisWindow}"/>
		<WpfViewers:KinectSkeletonViewer KinectSensorManager="{Binding KinectSensorManager, ElementName=thisWindow}"/>
	</Grid>
</Window>
