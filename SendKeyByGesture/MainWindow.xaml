<Window x:Class="SendKeyByGesture.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
		xmlns:WpfViewers="clr-namespace:Microsoft.Samples.Kinect.WpfViewers;assembly=Microsoft.Samples.Kinect.WpfViewers"
		Title="MainWindow" Height="438" Width="581"
		Loaded="Window_Loaded" Closing="Window_Closing"
		x:Name="thisWindow">
	<Grid>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<k:KinectSensorChooserUI x:Name="kinectSensorChooserUI" />
			<WpfViewers:KinectColorViewer KinectSensorManager="{Binding KinectSensorManager, ElementName=thisWindow}"/>
			<WpfViewers:KinectSkeletonViewer KinectSensorManager="{Binding KinectSensorManager, ElementName=thisWindow}"/>

			<GridSplitter Grid.Row="1" Height="5" x:Name="gridSplitter1" HorizontalAlignment="Stretch" />

			<TextBox x:Name="gestureLogTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Grid.Row="2"/>
		</Grid>

<!--		<Expander Header="Settings" HorizontalAlignment="Right" Margin="0,0,-1,0" Name="expander1" Width="219" FlowDirection="LeftToRight" ExpandDirection="Left">-->
<!--			<Grid />-->
<!--		</Expander>-->
	</Grid>
</Window>
